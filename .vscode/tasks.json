{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: gcc 生成活动文件",
            "type": "cppbuild",
            "command": "gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "使用gcc来编译当前活动文件",
        },
        {
            "label": "C/C++: clang++ 生成活动文件",
            "type": "cppbuild",
            "command": "clang++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "使用clang++来编译当前活动文件",
        }
    ]
}